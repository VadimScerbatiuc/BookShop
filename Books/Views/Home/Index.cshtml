@model IEnumerable<Books.Models.Book>
@{
    ViewData["Title"] = "Home Page";
    // var users = ViewBag.Users as List<Books.Controllers.About.Index>;
}

<div class="d-flex justify-content-between align-items-center">
    <h1>Books List</h1>
    <a asp-controller="Books" asp-action="Create"><i class="fa-solid fa-plus fa-2xl fontawesome"></i></a>
</div>

<div class="row" >
    @foreach(var book in Model)
    {
         <div class="col-sm-6 col-lg-3">       
            <div class="card">
                <div class="card-body">
                    <a asp-controller="Home" asp-action="Details" asp-route-id="@book.Id" class="card-link link-text">
                        <img class="card-img-top" src="https://pngimg.com/uploads/book/book_PNG50990.png" alt="Card image cap">
                        <h5 class="card-title text-link">@book.BookName</h5>
                    </a>
                    <p class="card-text description-text-color"><b>Description: </b>@book.Description<br> <b>Genre: </b>@book.Genre.GenreName </p>
                    <div class="d-flex align-items-center justify-content-between">
                        <span class="fs-5">Price: @book.Price $</span>
                        <a href="#" class="btn btn-primary" ><i class="fa-solid fa-cart-shopping"></i>  Add to cart</a>
                    </div>
                </div>
            </div>
        </div>
    }
</div>


